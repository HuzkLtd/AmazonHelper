{
  "manifest_version": 3,
  "name": "AmazonHelper",
  "version": "1.0",
  "description": "Transform your Amazon shopping with customisable dark mode and sponsored content removal. This elegant extension remembers your preferences whilst delivering a cleaner, more comfortable shopping experience.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.amazon.com/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.de/*",
    "*://*.amazon.fr/*",
    "*://*.amazon.it/*",
    "*://*.amazon.es/*",
    "*://*.amazon.nl/*",
    "*://*.amazon.pl/*",
    "*://*.amazon.se/*",
    "*://*.amazon.com.tr/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*",
        "*://*.amazon.co.uk/*",
        "*://*.amazon.de/*",
        "*://*.amazon.fr/*",
        "*://*.amazon.it/*",
        "*://*.amazon.es/*",
        "*://*.amazon.nl/*",
        "*://*.amazon.pl/*",
        "*://*.amazon.se/*",
        "*://*.amazon.com.tr/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
} 